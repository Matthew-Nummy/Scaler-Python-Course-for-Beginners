class Solution:
    # @param A : integer
    # @param B : integer
    # @param C : integer
    # @return an integer
    def solve(self, A, B, C):
        COVID = True
        Days = 0
        while COVID == True:
            C += (B - A)
            Days += 1
            if C <= 0:
                COVID = False
                
        return Days
